<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="programa_model_view" model="ir.ui.view">
            <field name="name">Programas</field>
            <field name="model">programa_model</field>
            <field name="arch" type="xml">
                <tree string="Lista">
                    <field name="id" width="50" />
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record id="programa_model_action" model="ir.actions.act_window">
            <field name="name">Programas</field>
            <field name="res_model">programa_model</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>